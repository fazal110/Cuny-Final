<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    tools:context="com.example.asif.cuny.EquipmentLibraryActivity">

    <RelativeLayout
        android:id="@+id/char_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.asif.cuny.CustomFonts.CustomTextView
            android:id="@+id/chara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/appcolor"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:textSize="22sp"
            android:text="A-E "/>



        <View

            android:id="@+id/view"
            android:layout_toRightOf="@+id/chara"
            android:layout_width="1dip"
            android:layout_height="24dp"
            android:background="#9E9E9E"/>

        <com.example.asif.cuny.CustomFonts.CustomTextView
            android:layout_toRightOf="@+id/view"
            android:id="@+id/charf"
            android:textColor="@color/appcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:textSize="22sp"
            android:text="F-J "/>



        <View

            android:id="@+id/view1"
            android:layout_toRightOf="@+id/charf"
            android:layout_width="1dip"
            android:layout_height="24dp"
            android:background="#9E9E9E"/>

        <com.example.asif.cuny.CustomFonts.CustomTextView
            android:layout_toRightOf="@+id/view1"
            android:id="@+id/chark"
            android:textColor="@color/appcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="22sp"
            android:text="K-P "/>



        <View

            android:id="@+id/view2"
            android:layout_toRightOf="@+id/chark"
            android:layout_width="1dip"
            android:layout_height="24dp"
            android:background="#9E9E9E"/>

        <com.example.asif.cuny.CustomFonts.CustomTextView
            android:layout_toRightOf="@+id/view2"
            android:id="@+id/charq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textColor="@color/appcolor"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="22sp"
            android:text="Q-T "/>

        <View

            android:id="@+id/view3"
            android:layout_toRightOf="@+id/charq"
            android:layout_width="1dip"
            android:layout_height="24dp"
            android:background="#9E9E9E"/>

        <com.example.asif.cuny.CustomFonts.CustomTextView
            android:layout_toRightOf="@+id/view3"
            android:id="@+id/charu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textColor="@color/appcolor"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="22sp"
            android:text="U-Z "/>

        <View
            android:layout_below="@+id/chara"
            android:id="@+id/line1"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/orange"/>

        <View
            android:layout_below="@+id/charf"
            android:layout_toRightOf="@+id/view"
            android:id="@+id/line2"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/orange"/>

        <View
            android:layout_below="@+id/chark"
            android:layout_toRightOf="@+id/view1"
            android:id="@+id/line3"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/orange"/>

        <View
            android:layout_below="@+id/charq"
            android:layout_toRightOf="@+id/view2"
            android:id="@+id/line4"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/orange"/>

        <View
            android:layout_below="@+id/charu"
            android:layout_toRightOf="@+id/view3"
            android:id="@+id/line5"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/orange"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/char_layout"
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/list_equipment_library"
            android:listSelector="@android:color/transparent"
            android:overScrollMode="never"
            android:background="@drawable/list_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </ListView>
    </LinearLayout>



</RelativeLayout>
