<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asif.cuny.HomeActivity">



    <LinearLayout
        android:padding="10dp"
        android:layout_weight="2.6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:layout_weight="2.5"
            android:padding="10dp"
            android:id="@+id/list_admin"
            android:overScrollMode="never"
            android:listSelector="@android:color/transparent"
            android:background="@drawable/list_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </ListView>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_weight="0.2"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@drawable/admin" >

        <ImageView
            android:layout_weight="1"
            android:id="@+id/home"
            android:onClick="HomeClick"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:onClick="ResourceClick"
            android:layout_toRightOf="@+id/home"
            android:id="@+id/res"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/res"
            android:id="@+id/build"
            android:onClick="BuildingClick"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/build"
            android:id="@+id/admin"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

    </LinearLayout>





</LinearLayout>