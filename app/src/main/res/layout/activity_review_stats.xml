<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/_white"
    tools:context="com.example.asif.cuny.ReviewStatsActivity">

    <include android:id="@+id/reviewstats_actionbar"
        layout="@layout/reviewstats_actionbar"/>

    <ListView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@id/android:list"
        android:overScrollMode="never"
        android:background="@drawable/list_round"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
