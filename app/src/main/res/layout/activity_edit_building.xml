<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asif.cuny.EditBuildingActivity">

    <com.example.asif.cuny.CustomFonts.CustomTextView
        android:padding="8dp"
        android:textSize="22sp"
        android:textColor="@color/appcolor"
        android:text="@string/_build_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.asif.cuny.CustomFonts.CustomEditText
        android:id="@+id/build_name_et"
        android:background="@drawable/round"
        android:padding="8dp"
        android:focusableInTouchMode="false"
        android:editable="false"
        android:textSize="20sp"
        android:textColor="@color/appcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <com.example.asif.cuny.CustomFonts.CustomTextView
        android:padding="8dp"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/appcolor"
        android:text="@string/_build_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.asif.cuny.CustomFonts.CustomEditText
        android:id="@+id/build_address"
        android:padding="8dp"
        android:onClick="BuildingTypeClick"
        android:textColor="@color/appcolor"
        android:focusableInTouchMode="false"
        android:editable="false"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round"
        />

    <com.example.asif.cuny.CustomFonts.CustomTextView
        android:padding="8dp"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/appcolor"
        android:text="@string/_build_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.asif.cuny.CustomFonts.CustomEditText
        android:id="@+id/build_type"
        android:padding="8dp"
        android:textColor="@color/appcolor"
        android:focusableInTouchMode="false"
        android:editable="false"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round"
        />

    <com.example.asif.cuny.CustomFonts.CustomTextView
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textColor="@color/appcolor"
        android:text="@string/_equip_installed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.asif.cuny.CustomFonts.CustomEditText
        android:id="@+id/select_equip_installed"
        android:padding="8dp"
        android:textColor="@color/appcolor"
        android:focusableInTouchMode="false"
        android:editable="false"
        android:textSize="20sp"
        android:onClick="EquipmentinstalledClick"
        android:drawableRight="@drawable/arrow1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round"
        />





    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/edit"
        android:onClick="EditClick"
        android:id="@+id/submitbtn"
        android:layout_width="120dp"
        android:layout_height="60dp" />

</LinearLayout>
</ScrollView>